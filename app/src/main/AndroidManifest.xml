<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhbw.informatik.recipeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_cooking_spoon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cooking_spoon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeApp">
        <activity
            android:name=".activity.LastClickedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MealDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CreateOwnRecipeActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainNav"
            android:exported="false"
            android:label="@string/title_activity_main_nav"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelectMainIngredientActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelectCategoryActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelectAreaActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>