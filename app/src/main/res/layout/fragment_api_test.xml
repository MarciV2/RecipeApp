<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ApiTestFragment">


    <Button
        android:id="@+id/apiCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startApiCall"
        android:text="API Call"

        app:layout_constraintBottom_toTopOf="@id/youtube"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lastClickedActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open lastclicked"
        app:layout_constraintBottom_toTopOf="@+id/youtube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apiCall"

        />

    <Button
        android:id="@+id/youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:onClick="randomVid"
        android:text="youtubetest"
        app:layout_constraintBottom_toTopOf="@id/btnCreateOwn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apiCall" />

    <Button
        android:id="@+id/btnCreateOwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create own recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtube" />

</androidx.constraintlayout.widget.ConstraintLayout>